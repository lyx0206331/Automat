<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.adrian.automat.activities.fragments.ShoppingFragment">

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp500"
        app:pointsPosition="CENTER"
        app:AutoPlayTime="3000"
        app:pointsContainerBackground="#44aaaaaa"
        app:pointNormal="@drawable/shape_page_indicator_0"
        app:pointSelect="@drawable/shape_page_indicator_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp360"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_scan_attention"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/btn_fillet_bg_selector"
                android:text="@string/scan_attention"
                android:textColor="@drawable/btn_font_selector"
                android:textSize="@dimen/font_normal" />

            <Button
                android:id="@+id/btn_all_drug"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_fillet_pressed"
                android:text="@string/all_drug"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/ib_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:src="@drawable/btn_fullscreen_bg"
                android:background="@android:color/transparent" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_rec_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_rec_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_fillet_normal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:src="@color/normal" />

            <TextView
                android:id="@+id/tv_rec_name_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="药品一"
                android:textColor="@color/normal"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_rec_price_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:￥12.6"
                android:textColor="@color/normal"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rec_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_rec_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_fillet_normal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:src="@color/normal" />

            <TextView
                android:id="@+id/tv_rec_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="药品一"
                android:textColor="@color/normal"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_rec_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:￥12.6"
                android:textColor="@color/normal"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rec_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_rec_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="@drawable/shape_fillet_normal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:src="@color/normal" />

            <TextView
                android:id="@+id/tv_rec_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="药品一"
                android:textColor="@color/normal"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_rec_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:￥12.6"
                android:textColor="@color/normal"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
